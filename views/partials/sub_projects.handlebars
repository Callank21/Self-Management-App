{{#each headings}}
  <div class='pl-2 my-3 mb-6 bg-cyan-700 block p-2 rounded-lg'>
    <div class='flex justify-between items-center'>
      <span data-heading-id={{id}} id="heading" class='text-2xl text-white sm:text-md font-medium'>
        {{heading_title}}
      </span>
      <div
   
        class='pt-0 p-2 border border-cyan-700 rounded-lg bg-cyan-700 shadow-lg'
      >
        <button
          data-addtaskbtn-id={{id}}
          id='addTaskBtn'   
          class='text-3xl text-center font-bold drop-shadow-xl text-white'
        >+</button>
      </div>
    </div>
    {{> editSubmit title='heading'}}
    {{#each tasks}}
    <div 
      class='items-center justify-between flex text-xl bg-sky-500 mt-3 block p-2 text-white rounded-lg sm:text-md font-light'
    >
      <div data-task-id={{id}} id="task" class="font-medium">{{desc}}</div><div data-task-id={{id}} id="task" class='font-bold text-gray-700 text-lg'>Time:
        {{time}}
      </div>
    </div>
    {{> editSubmit title='task' isTask='true'}}
    {{/each}}

  {{> taskSubmit }}
  </div>

{{/each}}