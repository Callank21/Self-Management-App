<div
  data-hiddentask-id={{id}}
  id='taskSubmitForm'
  class='hidden text-xl mt-3 block text-white rounded-lg sm:text-md font-light'
>
  <textarea
    id='task_title'
    data-tasktitle-id={{id}}
    rows='4'
    cols='50'
    class='block text-xl post-title-input w-full p-2 text-white border rounded-lg sm:text-md bg-gray-700'
    placeholder='Task description'
  ></textarea>

  <div class='mt-3 flex justify-between'>
    <input
      id='taskTime'
      data-time-id={{id}}
      type='text'
      class='block text-base p-2 post-title-input text-white border rounded-lg sm:text-md bg-gray-700'
      placeholder='Time: min'
    />

    <button
      id='taskSubmit'
      data-tasksubmit-id={{id}}
      type='submit'
      class='text-base create-btn bg-blue-500 hover:bg-blue-700 text-white font-normal py-1 px-4 rounded'
    >Submit</button>
  </div>
</div>