<body class='bg-gray-800 font-sans leading-normal tracking-normal mt-12'>

  <header>
    <!--Nav-->
    <nav
      aria-label='menu nav'
      class='bg-gray-800 pt-2 md:pt-1 pb-1 px-1 mt-0 h-auto w-full z-20 top-0'
    >

      <div class='flex flex-wrap items-center'>
        <div
          class='flex flex-shrink md:w-1/3 justify-center md:justify-start text-white'
        >
          <a href='/' aria-label='Home'>
            <span class='text-xl font-thin drop-shadow-xl'><i
                class=''
              ></i>Home</span>
          </a>
        </div>

        <div
          class='flex w-full pt-2 content-center justify-between md:w-1/3 md:justify-end'
        >
          <ul
            class='list-reset flex justify-between flex-1 md:flex-none items-center'
          >
            <li class='flex-1 md:flex-none md:mr-3'>
              <a
                class='inline-block py-2 px-4 text-white no-underline'
                href='#'
              >Current Day To-Do List / Kanban</a>
            </li>

            <li class='flex-1 md:flex-none md:mr-3'>
              <div class='relative inline-block'>
                <button
                  onclick="toggleDD('myDropdown')"
                  class='drop-button text-white py-2 px-2'
                >
                  <span class='pr-2'><i class='em em-robot_face'></i></span>
                  Hi, User
                  <svg
                    class='h-3 fill-current inline'
                    xmlns='http://www.w3.org/2000/svg'
                    viewBox='0 0 20 20'
                  >
                    <path
                      d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z'
                    ></path></svg></button>
                <div
                  id='myDropdown'
                  class='dropdownlist absolute bg-gray-800 text-white right-0 mt-3 p-3 overflow-auto z-30 invisible'
                >

                  <div class='border border-gray-800'></div>
                  <a
                    id='logout'
                    href='#'
                    class='p-2 hover:bg-gray-800 text-white text-sm no-underline hover:no-underline block'
                  ><i class='fas fa-sign-out-alt fa-fw'></i> Log Out</a>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>

    </nav>
  </header>

  <div class='flex flex-wrap space-x-2.5 h-auto w-screen pl-8 pr-8 pt-5'>
    <div class='item w-72 h-96 order-1 flex-nonerounded-lg'>

      <form class='bg-white rounded-lg new-post-form' id='new-project-form'>

        <div class='mb-6 ml-3 mr-3 pt-4'>
          <span
            class='pl-2 pb-3 text-2xl text-center font-thin drop-shadow-xl'
          >Project</span>
          <br />

          <input
            id='project_title'
            type='text'
            class='block post-title-input w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500'
            placeholder='project title'
          />
        </div>
        <div class='mb-6 ml-3 mr-3'>
          <span
            class='pl-2 pb-3 text-2xl text-center font-thin drop-shadow-xl'
          >Heading</span>
          <br />
          <input
            id='heading_title'
            type='text'
            class='block w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500'
            placeholder='heading title'
          />
        </div>
        <div class='mb-6 ml-3 mr-3'>
          <span
            class='pl-2 pb-3 text-2xl text-center font-thin drop-shadow-xl'
          >Task</span>
          <br />
          <input
            id='desc'
            type='text'
            class='mb-6 block w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500'
            placeholder='description'
          />
          <input
            id='time'
            type='text'
            class='block w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500'
            placeholder='time'
          />
        </div>

        <div class='pl-3 pb-4'>
          <button
            type='submit'
            class='create-btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
          >Create</button>
        </div>

      </form>
    </div>

    <div class='item w-72 h-96 order-2 flex-auto bg-gray-700 rounded-lg'>
      <div class='mt-6 ml-3 mr-3 pt-4 border rounded-lg w-72 bg-white'>
        <span
          class='pl-2 pb-3 text-2xl text-center font-thin drop-shadow-xl'
        >Project title</span>
        <br />

        <div
          class='text-3xl bg-blue-500 mt-3 mb-6 block w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500'
        > Heading title</div>

        <div
          class='text-3xl bg-purple-600 mt-3 mb-6 block w-full p-4 text-gray-900 border bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500'
        >
          <span class='pr-3 mr-3'>Task description</span><span
            class='ml-3 pl-3'
          >Time</span>
        </div>

      </div>
    </div>
  </div>

  <script src='/javascript/add-project.js'></script>
  <script src='/javascript/dashboard.js'></script>
  <script src='/javascript/logout.js'></script>

</body>