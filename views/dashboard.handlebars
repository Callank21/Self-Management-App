<body class='font-sans'>
  <header>
    <nav
      class='flex flex-wrap items-center justify-between w-full py-6 md:py-4 px-6 text-lg text-gray-700 bg-gray-800'
    >
      <div>
        <a href='/' aria-label='Home'>
          <span class='text-xl font-thin drop-shadow-xl pl-6 text-white'><i
              class=''
            ></i>Home</span>
        </a>
      </div>

      <div>
        <span class='text-xl font-thin drop-shadow-xl text-white'>Task Manager</span>
      </div>

      <!-- Hamburger Icon -->
      <svg
        xmlns='<http://www.w3.org/2000/svg>'
        id='menu-button'
        class='h-6 w-6 cursor-pointer md:hidden block'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M4 6h16M4 12h16M4 18h16'
        ></path>
      </svg>

      <!--menu -->

      <div class='hidden w-full md:flex md:items-center md:w-auto' id='menu'>
        <ul
          class='text-base text-gray-700 pt-4 md:flex md:justify-between md:pt-0'
        >
          <li>
            <a
              id='logout'
              href='#'
              class='p-2 text-white hover:bg-gray-300 text-xl font-thin drop-shadow-xl no-underline hover:no-underline block'
            ><i class='fas fa-sign-out-alt fa-fw'></i>Log Out</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <div class='md:flex mb-4 ml-7 mt-10 mr-7 rounded mx-auto'>

    <div class='w-full lg:w-1/5 rounded overflow-hidden relative flex flex-col'>
      <form class='bg-gray-700 rounded-lg new-post-form' id='new-project-form'>

        <div class='mb-6 ml-3 mr-3 pt-4'>
          <span
            class='text-neutral-100 pl-2 pb-3 text-2xl text-center font-thin drop-shadow-xl'
          >Project</span>
          <br />

          <input
            id='project_title'
            type='text'
            class='block post-title-input w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
            placeholder='Project Title'
          />
        </div>
        <div class='mb-6 ml-3 mr-3'>
          <span
            class='text-neutral-100 pl-2 pb-4 pt-2 text-2xl text-center font-thin drop-shadow-xl'
          >Heading</span>
          <br />
          <input
            id='heading_title'
            type='text'
            class='block w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
            placeholder='Heading Title'
          />
        </div>
        <div class='mb-6 ml-3 mr-3'>
          <span
            class='text-neutral-100 pl-2 pb-3 text-2xl text-center font-thin drop-shadow-xl'
          >Task</span>
          <br />
          <input
            id='desc'
            type='text'
            class='mb-6 block w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
            placeholder='Description'
          />
          <input
            id='time'
            type='text'
            class='block w-full p-4 text-gray-900 border rounded-lg bg- sm:text-md focus:ring-blue-500 focus:border-blue-500 bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
            placeholder='Time'
          />
        </div>

        <div class='pl-3 pb-4'>
          <button
            type='submit'
            class='create-btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
          >Create</button>
        </div>

      </form>
    </div>
    
    {{> projects }}

 
    <div class='rounded overflow-hidden mt-10 mr-3'>
      <div
        class='m-2 pt-2 p-5 border border-gray-700 rounded-lg bg-gray-700 shadow-lg'
      >
        <button
          class='text-4xl text-center font-bold drop-shadow-xl text-white'
        >+</button>
      </div>
    </div>

  </div>

  <script src='/javascript/add-project.js'></script>
  <script src='/javascript/dashboard.js'></script>
  <script src='/javascript/logout.js'></script>
  <script src='/javascript/addTime.js'></script>
    
</body>